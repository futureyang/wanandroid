<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.future.wanandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">
        <activity
            android:name=".ui.main.SplashActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|fontScale|density|orientation"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.login.login.LoginActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|fontScale|density|orientation"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.login.register.RegisterActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|fontScale|density|orientation"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|fontScale|density|orientation"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.details.DetailActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|fontScale|density|orientation"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|fontScale|density|orientation"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.user.collection.CollectionActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|fontScale|density|orientation"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.user.history.HistoryActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|fontScale|density|orientation"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.user.ranking.RankingActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|fontScale|density|orientation"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.user.integral.IntegralActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|fontScale|density|orientation"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.user.share.list.ShareListActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|fontScale|density|orientation"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.user.share.ShareActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|fontScale|density|orientation"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.user.opensource.OpenSourceActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|fontScale|density|orientation"
            android:launchMode="singleTop" />
    </application>

</manifest>